<!-- Page Header -->
<!-- Set your background image for this header in the theme's configuration: index_cover -->
<header class="intro-header" style="background-image: url('<%- theme.index_cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-md-2 col-md-10 offset-md-1">
                <div class="site-heading text-center text-white">
                    <h1><%- config.title %></h1>
                    <hr class="small">
                    <span class="subheading d-block"><%- config.subtitle %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container page-index">
    <div class="row">
        <div class="col-lg-8 offset-md-2 col-md-10 offset-md-1">
            <% site.posts.each( function (post) { %>
                <% if (post.pin) { %>
                    <%- partial('_partial/pages/index-pin', {post: post}) %>
                <% } %>
            <% }); %>
        </div>
        <div class="col-lg-8 offset-md-2 col-md-10 offset-md-1 post-all">    
            <% page.posts.each( function (post) { %>
                <% if (!(post.pin)) { %>
                    <%- partial('_partial/pages/index-preview', {post: post}) %>
                <% } %>
            <% }); %>
        </div>
        <div class="col-lg-8 offset-md-2 col-md-10 offset-md-1 post-all">    
            <%- partial('_partial/pagination') %>
        </div>
        <div class="col-lg-8 offset-md-2 col-md-10 offset-md-1 post-all card p-3">
            <% if (site.tags != null){ %>
            <h3 class="text text-primary">ðŸŽ« All Tags</h3>
            <hr>
            <% site.tags.each( function (tag) { %>
                <%- partial('_widget/tag-item', {tag: tag}) %>
            <% }); %>
            <% } %>
        </div>
    </div>
</div>

